
public class Test3 {

	public static void main(String[] args) {


	int r = 10; // (r= radius)
	
	//자료형. 실수(소수점 포함 수) -> double로 인식함 -> float으로 인식하려면 숫자 뒤에 f를 붙인다 3.14f
	
	//float area; float length;도 가능
	
	//double area, length;
	
	float area, length;
	
	area = r*r*3.14f; //면적
	length = r*2*3.14f; //둘레

	System.out.println(area);
	System.out.println(length);
	
	
	}
}
