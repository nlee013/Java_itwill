package com.day4;

public class Test20 {

	public static void main(String[] args) {
		
		int i, j;
		
		for(i = 0; i<=5; i++) {
			
			for(j = 1; j <= 5-i; j++) {
				
				System.out.print(" ");
			}
			
			for(j = 1; j <= i; j++) {
				
				System.out.print("*");
			}
			
			for(j = 1; j <= 5-i; j++) {
				
			}
			
			for(j = 1; j <= i; j++) {
				
				System.out.print("*");
			}
			System.out.println();
		}

	}

}
